<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>JogosMyNewGame</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/theme.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/telaGradeDeConsoles.css" />
</head>

<body>
  <%- include('./partials/header') %>

    <main>
      <div class="div-principal">
        <h1 class="p">PLAY</h1>

        <% consoles.map(console=> { %>
          <div class="jg">
            <a href="/consoles/<%=console.id_console%>">
              <img class="img" src="/assets/images/<%=console.imagem%>" alt="<%=console.nome%>">
            </a>
            <div class="prjg">
              <span>R$<%=console.preco %></span>
              <img src="/assets/images/carrinhocompra.png" alt="Carrinho De Compra">
            </div>
            <button type="submit" name="" <%=`onclick=consolesDatabase (id_console:${console.id_console}, nome:'${console.nome}', imagem:'${console.imagem}', preco:${console.preco})`%>>Adicionar ao carrinho</button>
          </div>
          <% }) %>

      </div>
    </main>
    <script src="/js/scriptCarrinho.js"></script>
    <%- include('./partials/footer') %>

</body>

</html>