<body>

    <%- include('./partials/header') %>

        <section class="principal">
            <h1>Inscreva-se</h1>
            <div class="box-sign-in">

                <form id="form" class="form" method="post" action="/create">
                    <div class="left-box">

                        <div class="datas">
                            <label for="email">E-mail:</label>
                            <input type="email" id="email" placeholder="Digite seu e-mail" name="email">
                            <small id="email-msg">Mensagem de erro</small>
                        </div>
                        <div class="datas">
                            <label for="email">Confirme seu e-mail: </label>
                            <input type="email" id="email-confirmation" placeholder="Digite seu e-mail novamente" name="confirmarEmail">
                            <small id="email-msg">Mensagem de erro</small>
                        </div>
                        <div class="datas">
                            <label for="password">Senha: </label>
                            <input type="password" class="input-field" id="password" class="password" placeholder="Digite a senha" name="senha">
                            <small id="password-msg">Mensagem de erro</small>
                        </div>
                        <div class="datas">
                            <label for="password">Confirme sua senha: </label>
                            <input type="password" id="password-confirmation" placeholder="Digite a senha novamente"
                                name="confirmarSenha">
                            <small id="password-msg">Mensagem de erro</small>
                        </div>
                    </div>

                    <div class="right-box">
                        <div class="datas">
                            <label for="nome">Nome: </label>
                            <input type="name" id="name" placeholder="Digite seu nome" name="name">
                            <small id="name-msg">Mensagem de erro</small>
                        </div>
                        <div class="datas">
                            <label for="text">Digite seu CPF: </label>
                            <input type="text" name="cpf" id="cpf" placeholder="CPF - Apenas NÃºmeros" name="cpf">
                            <small id="cpf-msg">Mensagem de erro</small>
                        </div>
                        <div class="datas">
                            <label for="telefone">Telefone </label>
                            <input type="text" id="telefone" maxlength="11" placeholder="(xx) xxxxx-xxxx" name="telefone">
                            <small id="telefone-msg">Mensagem de erro</small>
                        </div>
                        <button class="botao-salvar" type="submit" value="Salvar">Salvar</button>
                        <button class="botao-voltar" type="button" value="Voltar">Voltar</button>
                    </div>
                </form>
            </div>


        </section>

