                                    placeholder="Valor Item3">

                        <br><br>

                        <label for="pedido"></label>
                        <input class="campos-produtos" type="text" name="datadopedido" id="calcularfrete"
                            placeholder="Calcular Frete">

                            <label for="pedido"></label>
