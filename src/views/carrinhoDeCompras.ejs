                                    <button type="submit"><img src="/assets/images/trash.png" id="icone-lixeira3"></button>
                                </form>
                            </div>
                        </div>
                        <div class="linha4">
                            <div id="calculo-frete">Calcular Frete</div>
                            <div id="valor-frete">Valor do Frete</div>
                        </div>
                        <div class="linha5">
                            <div id="total">Total</div>
                        </div>
                        <div class="linha6">
                            <div id="comprar-mais">
                                <button type="button">
                                    <a class="button" href="">
                                        <p>Continuar comprando</p>
                                    </a>  
                                </button>
                            </div>
                        </div>
                        <div class="linha7">
                            <div id="finalizar-compra">
                                    <button type="button">
                                        <a class="button" href="">
                                            <p>Finalizar Compra</p>
                                        </a>
                                    </button>   
                            </div>
                        </div>
                </div>
            </div>
