    <link rel="stylesheet" href="/css/faleConosco.css" />
</head>

<body>
    <%- include('./partials/header') %>
    <main>
        <section>
            <div class="div-pai">
                <div class="div-principal">
                    <h1>Fale Conosco</h1>
                    <div class="nameemail">
                    <form class="formulario" action="/contato/enviar" method="post">
                        <div class="name">
                            <label for="name">Nome: </label>
                            <input type="text" id="name" placeholder="Digite seu nome" name="nome"required/>
                        </div>
                        <div class="email">
                            <label for="email">Email: </label>
                            <input type="text" id="email" placeholder="Digite seu email" name="email"required/>
                        </div>
                    </div>
                        <textarea maxlength="1000" minlength="30" placeholder="Escreva Aqui..." name="mensagem"class="textarea"></textarea>
                    <button class="send" type="submit" value="Enviar">Enviar</button>
                    </form>


                </div>
                
            </div>

        </section>
    </main>
    <%- include('./partials/footer') %>

</body>

</html>